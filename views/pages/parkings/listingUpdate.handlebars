<div class="container">
    <form action="/listings/updateListingData/{{id}}" method="post" id="listBooking">
    {{#if hasErrors}}
      <div class="alert alert-danger error" role="alert">
        {{error}}
      </div>
    {{/if}}
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="startDate">Start date</label>
                <input
                type="date"
                class="form-control"
                id="startDate"
                name="startDate"
                value="{{data.startDate}}"
                />
                <label for="endDate">End date</label>
                <input
                type="date"
                class="form-control"
                id="endDate"
                name="endDate"
                value="{{data.endDate}}"
                />
            </div>
            <div class="form-group col-md-6">
                <label for="startTime">Start time</label>
                <select
                id="startTime"
                name="startTime"
                class="form-control mr-sm-2"
                >
                {{!-- Pending if part, send these values when rendering back to this page --}}
                    {{!-- {{#if startTimeSelected}}
                        {{{selectedStartTime}}}
                    {{else}} --}}
                        <option selected>Select Start Time</option>
                        {{#each startTimeVal}}
                        <option>{{this}}</option>
                        {{/each}}

                    {{!-- {{/if}} --}}

                </select>
                <label for="endTime">End time</label>
                <select
                id="endTime"
                name="endTime"
                class="form-control mr-sm-2"
                >
                    <option selected>Select End Time</option>
                    {{#each endTimeVal}}
                    <option>{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="timeSlots">Time slot</label>
                <input
                type="text"
                class="form-control"
                id="timeSlots"
                name="timeSlots"
                value="{{data.timeSlots}}"
                readonly
                />
                <label for="price">Price</label>
                <input
                type="number"
                min="1"
                class="form-control"
                id="price"
                name="price"
                value="{{data.price}}"
                />
            </div>
        </div>
        <input type="submit" value="Update">
    </form>
    <div class="alert alert-danger error" id="uiError" role="alert">
  </div>
</div>