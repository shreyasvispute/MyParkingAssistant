<div class="container">
  <form
    action="/listings/bookListing/{{data._id}}"
    method="post"
    id="listBooking"
  >
  {{#if hasErrors}}
      <div class="alert alert-danger error" role="alert">
        {{error}}
      </div>
    {{/if}}
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="startDate">Start date</label>
        <input
          type="text"
          class="form-control"
          id="startDate"
          name="startDate"
          value="{{data.startDate}}"
          readonly
        />
        <label for="endDate">End date</label>
        <input
          type="text"
          class="form-control"
          id="endDate"
          name="endDate"
          value="{{data.endDate}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6">
        <label for="timeSlots">Time Slot</label>
        <input
          type="text"
          class="form-control"
          id="timeSlots"
          name="timeSlots"
          value="{{data.timeSlots}}"
          readonly
        />
        {{!-- <label for="startTime">Start time</label>
        <input
          type="text"
          class="form-control"
          id="startTime"
          name="startTime"
          value="{{data.startTime}}"
          readonly
        />
        <label for="endTime">End time</label>
        <input
          type="text"
          class="form-control"
          id="endTime"
          name="endTime"
          value="{{data.endTime}}"
          readonly
        /> --}}
      </div>
      <div class="form-group col-md-6">
        <label for="price">Hourly Price</label>
        <input
          type="text"
          class="form-control"
          id="price"
          name="price"
          value="{{data.price}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6">
        <label for="price">Number plate</label>
        <input
          type="text"
          class="form-control"
          id="numberPlate"
          name="numberPlate"
          value="{{data.numberPlate}}"
        />
      </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Book"/>
  </form>
</div>